

        <GridLayout

            android:layout_alignParentStart="true"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_wifi_item"
            android:layout_marginTop="19dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SSID"
                android:id="@+id/tv_wifi_item"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="health"
                android:id="@+id/tv_wifi_health_item"
                android:layout_marginEnd="17dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_row="0"
                android:layout_column="15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="status"
                android:textColor="#bab3b2"
                android:id="@+id/tv_wifi_status_item"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="encrypt"
                android:id="@+id/tv_wifi_encrypt_item"
                android:layout_alignTop="@+id/tv_wifi_item"
                android:layout_toStartOf="@+id/tv_wifi_health_item"
                android:layout_row="1"
                android:layout_column="15" />
        </GridLayout>

