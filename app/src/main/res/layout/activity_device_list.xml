<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_main"
    android:background="@android:color/white"
    tools:context=".activities.DeviceListActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/layout_header"
        android:background="@android:color/white"
        android:layout_marginBottom="10dp">

        <TextView
            style="@style/ActionBarTextView"
            android:text="Editar"
            android:id="@+id/text_view_edit"/>

        <TextView
            style="@style/ActionBarTitle"
            android:text="Meus dispositivos"/>

        <ImageView
            android:id="@+id/image_view_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/add_btn_style"
            android:clickable="true"
            android:layout_margin="6dp"/>

        <ImageView
            android:id="@+id/image_view_gallery"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/gallery_btn_style"
            android:clickable="true"
            android:layout_margin="6dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:id="@+id/image_button_cloud3"
            android:clickable="true"
            android:src="@drawable/cloud3_button"
            android:visibility="gone"/>

    </LinearLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/expandable_list_view2"
        android:groupIndicator="@null"
        android:background="@android:color/white" />

</LinearLayout>
