<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background_with_shadow">

    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center"-->
        <!--android:layout_gravity="center">-->


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_channels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:visibility="invisible"
            android:scrollbars="vertical"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="Carregando informações para iniciar conexão..."
        android:id="@+id/tv_message_connecting" />

    <br.inatel.icc.gigasecurity.gigamonitor.ui.OverlayMenu
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/overlay_menu"/>

    <br.inatel.icc.gigasecurity.gigamonitor.ui.OverlayPTZ
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/ptz_overlay_menu" />


</FrameLayout>