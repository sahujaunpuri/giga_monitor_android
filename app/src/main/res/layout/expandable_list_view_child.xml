<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/background_with_shadow">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_channels"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#000000"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:scrollbars="vertical" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:alpha="0.7"
            android:id="@+id/layout_menu"
            android:visibility="gone"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center"
                android:text="Canal"
                android:textColor="#000000"
                android:id="@+id/tv_channel_number_recycler" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hq_off"
                    android:layout_margin="5dp"
                    android:id="@+id/iv_hq" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pause"
                    android:layout_margin="5dp"
                    android:id="@+id/iv_play_pause" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_snapshot_off"
                    android:layout_margin="5dp"
                    android:id="@+id/iv_snapshot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_snapvideo"
                    android:layout_margin="5dp"
                    android:id="@+id/iv_snapvideo" />
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="10dp"
        android:text="Conectando..."
        android:id="@+id/tv_message_connecting" />


</LinearLayout>


