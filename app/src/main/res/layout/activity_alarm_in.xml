<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.inatel.icc.gigasecurity.gigamonitor.activities.AlarmInActivity">


    <CheckBox
        android:id="@+id/check_box_alarm_in_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:text="@string/enable" />

    <TextView
        android:id="@+id/lineAlarmEnable"
        android:gravity="bottom"
        android:layout_below="@+id/check_box_alarm_in_enable"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ccced0"
        />

    <TextView
        android:id="@+id/tvSensorType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Type:"
        android:textColor="@color/secondary_color"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_below="@+id/lineAlarmEnable"/>

    <RadioGroup
        android:id="@+id/radio_group_sensor_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSensorType" >

        <RadioButton
            android:id="@+id/check_box_normally_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normally Closed" />

        <RadioButton
            android:id="@+id/check_box_normally_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normally Open" />

        </RadioGroup>



</RelativeLayout>
