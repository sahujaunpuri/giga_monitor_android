<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.inatel.icc.gigasecurity.gigamonitor.config.cloud.CloudConfigActivity">

    <CheckBox
        android:id="@+id/check_box_cloud_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:text="@string/enable" />

    <TextView
        android:id="@+id/text_view_cloud_mtu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="nMTU" />

    <EditText
        android:id="@+id/edit_text_cloud_mtu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1280"
        android:inputType="number"
        android:digits="-0123456789"/>

    <TextView
        android:id="@+id/text_view_cloud_server_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Server address" />

    <EditText
        android:id="@+id/edit_text_cloud_server_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="200.98.128.50"
        android:inputType="textUri" />

    <TextView
        android:id="@+id/text_view_cloud_server_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Server port" />

    <EditText
        android:id="@+id/edit_text_cloud_server_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="8000"
        android:inputType="number"
        android:digits="0123456789"/>

</LinearLayout>
