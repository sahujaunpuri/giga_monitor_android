<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/ptz_overlay" android:visibility="gone">

    <ImageView
        android:src="@drawable/ic_arrow_down_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:src="@drawable/ic_arrow_up_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

    <ImageView
        android:src="@drawable/ic_arrow_left_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="1.5"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:src="@drawable/ic_arrow_right_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="1.5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>