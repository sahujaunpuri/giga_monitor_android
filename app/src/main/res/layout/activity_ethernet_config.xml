<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="br.inatel.icc.gigasecurity.gigamonitor.config.ethernet.EthernetConfigActivity">

    <ScrollView
        android:id="@+id/scroll_view_ethernet"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ip"/>

            <EditText
                android:id="@+id/edit_text_ethernet_host_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="192.168.1.3"
                android:maxLines="1"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_submask"/>

            <EditText
                android:id="@+id/edit_text_ethernet_submask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="255.255.255.0"
                android:maxLines="1"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gateway"/>

            <EditText
                android:id="@+id/edit_text_ethernet_gateway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="192.168.1.1"
                android:maxLines="1"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
