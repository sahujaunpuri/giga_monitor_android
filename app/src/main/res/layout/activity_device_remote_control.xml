<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.inatel.icc.gigasecurity.gigamonitor.activities.DeviceRemoteControlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            style="@style/ActionBarTextView"
            android:text="@string/button_cancel"
            android:id="@+id/text_view_cancel"/>

        <TextView
            style="@style/ActionBarTitle"
            android:text="@string/new_device"/>

        <TextView
            style="@style/ActionBarTextView"
            android:text="@string/button_cancel"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                style="@style/ImageButtonActivityRemoteControl"
                android:src="@drawable/ic_power_settings_new_green_40dp"
                android:id="@+id/iv_control_esc" />

            <TextView
                style="@style/TextViewActivityRemoteControl"
                android:text="esc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                style="@style/ImageButtonActivityRemoteControl"
                android:src="@drawable/ic_power_settings_new_green_40dp"
                android:background="@drawable/rounded_corner_btn_orange"
                android:id="@+id/iv_control_quad" />

            <TextView
                style="@style/TextViewActivityRemoteControl"
                android:text="telas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                style="@style/ImageButtonActivityRemoteControl"
                android:src="@drawable/ic_power_settings_new_green_40dp"
                android:background="@drawable/rounded_corner_btn_blue"
                android:id="@+id/iv_control_menu" />

            <TextView
                style="@style/TextViewActivityRemoteControl"
                android:text="menu" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_control_up"
        android:src="@drawable/ic_up"
        android:layout_margin="15dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_controle_left"
            android:src="@drawable/ic_left"
            android:layout_margin="15dp"
            android:layout_gravity="left|center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_control_ok"
            android:src="@drawable/ic_ok"
            android:layout_margin="15dp"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_control_right"
            android:src="@drawable/ic_right"
            android:layout_margin="15dp"
            android:layout_gravity="right|center_vertical" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_control_down"
        android:src="@drawable/ic_down"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal|bottom" />

</LinearLayout>
