<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="br.inatel.icc.gigasecurity.gigamonitor.activities.AlarmOptionsActivity">

    <Button
        style="?attr/actionButtonStyle"
        android:gravity="start|center"
        android:id="@+id/button_alarm_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alarmIn"
        android:text="Alarm In"/>

    <TextView
        android:id="@+id/lineAlarmIn"
        android:gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ccced0"
        />

    <Button
        style="?attr/actionButtonStyle"
        android:gravity="start|center"
        android:id="@+id/button_alarm_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alarmOut"
        android:text="Alarm Out"/>

    <TextView
        android:id="@+id/lineAlarmOut"
        android:gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ccced0"
        />

</LinearLayout>
