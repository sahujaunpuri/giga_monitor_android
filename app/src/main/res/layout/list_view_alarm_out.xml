<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.inatel.icc.gigasecurity.gigamonitor.activities.AlarmOutActivity">

    <TextView
        android:id="@+id/tv_channel_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Canal 1"
        android:textColor="@color/secondary_color"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Mode:"
        android:textColor="@color/secondary_color"
        android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/radio_group_alarm_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Config" />

        <RadioButton
            android:id="@+id/radio_button_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual" />

        <RadioButton
            android:id="@+id/radio_button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop" />

        </RadioGroup>

    <TextView
        android:id="@+id/lineAlarmMode"
        android:gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ccced0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvStatusAlarm"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="15sp"
            android:textColor="@color/secondary_color"
            />

        <TextView
            android:id="@+id/tv_status_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"/>

        </LinearLayout>
</LinearLayout>