<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6"
    tools:context="br.inatel.icc.gigasecurity.gigamonitor.activities.DeviceConfigActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:background="#e6e6e6">

            <Button
                style="?attr/actionButtonStyle"
                android:gravity="start|center"
                android:id="@+id/button_config_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="@string/label_settings"/>

            <TextView
                android:id="@+id/lineEthernet"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0"
                />

            <Button
                style="?attr/actionButtonStyle"
                android:gravity="start|center"
                android:id="@+id/button_config_restart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="@string/label_reboot"/>

            <TextView
                android:id="@+id/lineCloud"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
