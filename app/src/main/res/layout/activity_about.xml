<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/ActionBarTextView"
            android:text="@string/back"
            android:layout_width="60dp"
            android:id="@+id/text_view_back"/>

        <TextView
            style="@style/ActionBarTitle"
            android:layout_width="90dp"
            android:text="@string/about"/>

        <TextView
            style="@style/ActionBarTextView"
            android:id="@+id/text_view_save"
            android:layout_width="60dp"
            android:visibility="invisible"
            android:text="@string/save"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/label_search_serial_number"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:id="@+id/serial_number_txt"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="text"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lineEthernet"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_software"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Software"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:id="@+id/software_txt"
                    android:hint="text"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lineDns"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_hardware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Hardware"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="text"
                    android:id="@+id/hardware_txt"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lineDdns"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_video_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/label_video_channel"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="text"
                    android:id="@+id/video_channel_txt"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lineUPnp"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_mac_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/label_mac_address"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:id="@+id/mac_address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="text"/>

            </LinearLayout>

            <TextView
                android:id="@+id/linePass"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_video_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Video mode" />

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:id="@+id/video_mode_txt"
                    android:hint="text"/>

            </LinearLayout>

            <TextView
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_build_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Construção" />

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:id="@+id/txt_build_time"
                    android:hint="text"/>

            </LinearLayout>

            <TextView
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
