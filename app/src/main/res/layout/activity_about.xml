<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:background="#e6e6e6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#e6e6e6">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/label_search_serial_number"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:id="@+id/serial_number_txt"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="text"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lineEthernet"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#e6e6e6">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_software"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Software"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:id="@+id/software_txt"
                    android:hint="text"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lineDns"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#e6e6e6">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_hardware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Hardware"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="text"
                    android:id="@+id/hardware_txt"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lineDdns"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#e6e6e6">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_video_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/label_video_channel"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="text"
                    android:id="@+id/video_channel_txt"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lineUPnp"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#e6e6e6">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_mac_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/label_mac_address"/>

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:id="@+id/mac_address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="text"/>

            </LinearLayout>

            <TextView
                android:id="@+id/linePass"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#e6e6e6">

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="start|center"
                    android:id="@+id/label_video_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Video mode" />

                <TextView
                    style="?attr/actionButtonStyle"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:id="@+id/video_mode_txt"
                    android:hint="text"/>

            </LinearLayout>

            <TextView
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccced0" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
