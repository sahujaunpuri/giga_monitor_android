<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Giga" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBarGiga</item>
        <item name="actionBarStyle">@style/ActionBarGiga</item>
        <item name="android:textColorPrimary">@color/title</item>
        <item name="android:textColorSecondary">@color/secondary_color</item>
        <item name="android:editTextStyle">@style/EditTextColorsGiga</item>
        <item name="android:textAppearanceButton">@color/secondary_color</item>

    </style>

    <style name="ActionBarGiga" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/action_bar_color</item>
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="EditTextColorsGiga" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/secondary_color</item>
    </style>

    <style name="ResultButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ShareButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--Activity Form-->
    <style name="LinearLayoutHorizontalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/action_bar_color</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Action Bar-->
    <style name="ActionBarTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#bdc3c7</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">9dp</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/action_bar_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">16dp</item>
    </style>


</resources>
